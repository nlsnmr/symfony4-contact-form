    <h2>Contact Form</h2>
    <br />
    <div>
        {{ form_start(email_form) }}
        {{ form_widget(email_form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" value="Send" class="btn btn-success"/>
